{% extends 'base.html.twig' %}

{% block title %}Categories {% endblock %}

{% block body %}
    <div class="categorie-container">
        <h1 class="text-center my-4">Categories</h1>

        {% include 'layouts/_flash_message.html.twig' %}
        <br>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nom }}</td>
                    <td>{{ categorie.description }}</td>
                    <td>
                        <a class="btn btn-outline-primary" href="{{ path('app_categorie_show', {'id': categorie.id}) }}">Show</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <br>
        <div class="text-center mt-4">
            <a class="btn btn-success" href="{{ path('app_categorie_new') }}">Create new</a>
        </div>
    </div>
{% endblock %}
